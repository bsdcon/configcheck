# Setup locale environment for consistency of string operations
# (like sorting) when running from shell or via crontab
# -- this should be kept synchronized with the shell env.
LC_COLLATE=en_US.ISO8859-1
LC_CTYPE=en_US.ISO8859-1
LC_MESSAGES=C
LC_MONETARY=en_US.ISO8859-1
LC_NUMERIC=en_US.ISO8859-1
LC_TIME=en_US.ISO8859-1
# Have to export this towards the pipe expressions being executed
export LC_COLLATE LC_CTYPE LC_MESSAGES LC_MONETARY LC_NUMERIC LC_TIME

